                    h4#myModalLabel.modal-title
                        | Edit Resource
                // Modal Body
                .modal-body
                    //#editForm.form(role='form' method='GET' action='https://www.google.com/')
                    form(role='form' method='POST' action='/search/add')
                        div.form-group
                            label(for='name') Title:
                            input#name.form-control(type='text', placeholder='Title' name='name')
                        div.form-group
                            label(for='authors') Authors:
                            input#authors.form-control(type='text', placeholder='Somebody' name='authors' onchange='validateTags(this)')
                        div.form-group
                            label(for='date') Pick date:
                            input#date.form-control(type='date', name='date')
                        hr

